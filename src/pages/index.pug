doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css')
		link(rel='stylesheet' href='/src/styles/main.scss')
		link(rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons')
		title#tittle Color Toolbox
		meta(name="description" content='A color picker, Name, Converter and visualizer.')
		meta(name="keywords" content='RGB,HSL,HSV,HSB,Color Picker,Rgb cube, tool, sliders')
		meta(name="author" content='Leon Nikolai Engelsvold')
		link(rel="icon" sizes="any" type="data:image/svg+xml" href="favicon.ico")
		script(src="/src/scripts/index.js" type="module" defer)
	body
		.wrapper
			#sidebar-left
				//- nav
				//- 	label.radio
				//- 		input(type="radio", name="type" value="number" oninput='changeinput("clr-in",this.value)')
				//- 		span Numbers
				//- 	label.radio
				//- 		input(type="radio", name="type" value="range" checked oninput='changeinput("clr-in",this.value)')
				//- 		span Sliders
				//- 	label.radio
				//- 		input(type="radio", name="type" value="range" disabled oninput='sitealert("This feature is currently not implemented")')
				//- 		span Graphical
				section.colorspace(style="display: none;")
					div#colorswap
						input(type="radio", name="selectedcolor" value="0" checked onchange="colorload(0);")#color-0
				section.colorspace.rgb
					span.descriptor rgb
					.row
						input(type="range", step="any" value=255 max=255 min=0 name="")#red.clr-in
					.row
						input(type="range",  step="any" value=0 max=255 min=0 name="")#green.clr-in
					.row
						input(type="range", step="any" value=0 max=255 min=0 name="")#blue.clr-in
				section.colorspace.hue
					span.descriptor hsx
					.row.huepointer
						input(type="range", step="any" value=0 max=360 min=0 name="")#hue.clr-in
					div.colorspace.hsl
						span.descriptor hsl
						.row
							input(type="range", step="any" value=100 max=100 min=0 name="")#saturation_1.clr-in
						.row
							input(type="range", step="any" value=50 max=100 min=0 name="")#lightness.clr-in
					div.colorspace.hsv
						span.descriptor hsv
						.row
							input(type="range", step="any" value=100 max=100 min=0 name="")#saturation_2.clr-in
						.row
							input(type="range", step="any" value=100 max=100 min=0 name="")#value.clr-in
					div.colorspace.hwb
						span.descriptor hwb
						.row
							input(type="range", step="any" value=0 max=100 min=0 name="")#whiteness.clr-in
						.row
							input(type="range", step="any" value=0 max=100 min=0 name="")#blackness.clr-in
				section.colorspace.cmyk
					span.descriptor cmyk IN PROGRESS
					.row
						input(type="range", value=0 max=100 min=0 name="" )#cyan.clr-in
					.row
						input(type="range",  value=0 max=100 min=0 name="")#magenta.clr-in
					.row
						input(type="range", value=0 max=100 min=0 name="")#yellow.clr-in
					.row
						input(type="range", value=0 max=100 min=0 name="")#key.clr-in
					.row
		
				//- canvas#canvas(width='100' height='100')
			#middel
				#tabs
					#tab-buttons
					#tab-content
						.tab(data-tab="3D")
							#viewrgb
						.tab(data-tab="Search")
							.color-search
								form#clr-search
									label(for="searchfield").material-icons.searchIcon 
										span search
									input#searchfield(type="text" noaria-label="Search" autocomplete="off" placeholder="Color Search" name="color-search")
									.dropdown
								#message
								ul#output
									.output-scroll 
										.output-content
						.tab(data-tab="Convert")
								#test
									span.bold #ff0000
									.grid
										div
											- var rgb = `${[255,0,0].map(e=>(e|0).toString().padEnd(4,"_")).join(" ")}`.replace(/_/g,"<span class='pad'></span>")
											span.prefix rgb
											span.digit !{rgb}
										div
											- var hsl = `${((0)+"°").padEnd(4,"_")} ${((100)+"%").padEnd(4,"_")} ${((50) + "%").padEnd(4,"_")}`.replace(/_/g,"<span class='pad'></span>")
											span.prefix hsl
											span.digit !{hsl}
										div
											- var hwb = `${((0)+"°").padEnd(4,"_")} ${((0)+"%").padEnd(4,"_")} ${((0) + "%").padEnd(4,"_")}`.replace(/_/g,"<span class='pad'></span>")
											span.prefix hwb
											span.digit !{hwb}
										div
											- var hsv = `${((0)+"°").padEnd(4,"_")} ${((100)+"%").padEnd(4,"_")} ${((100) + "%").padEnd(4,"_")}`.replace(/_/g,"<span class='pad'></span>")
											span.prefix hsv
											span.digit !{hsv}
										div
											- var cmyk = `${((0)+"%").padEnd(4,"_")} ${((100)+"%").padEnd(4,"_")} ${((100)+"%").padEnd(4,"_")} ${((0)+"%").padEnd(4,"_")}`.replace(/_/g,"<span class='pad'></span>")
											span.prefix cmyk
											span.digit !{cmyk}
				#notifications
